# Financial AI Swarm - Environment Configuration
# Copy this file to .env and fill in your values

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/financial_ai_swarm
REDIS_URL=redis://localhost:6379

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.0

# Fraud Detection Settings
FRAUD_DETECTION_THRESHOLD=0.7
ANOMALY_CONTAMINATION=0.05

# Compliance Settings
OFAC_API_URL=https://api.ofac.treasury.gov
PEP_API_URL=https://api.pep-screening.com
ENABLE_SANCTIONS_CHECK=true
ENABLE_PEP_CHECK=true

# Document Processing
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
MAX_UPLOAD_SIZE=10485760  # 10MB

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENABLE_CORS=true
LOG_LEVEL=INFO

# Monitoring & Observability
PROMETHEUS_PORT=9090
ENABLE_TRACING=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Security
JWT_SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100

# Budget Configuration
DEFAULT_BUDGET_TRAVEL=50000
DEFAULT_BUDGET_ENTERTAINMENT=10000
DEFAULT_BUDGET_IT_SERVICES=100000
DEFAULT_BUDGET_CONSULTING=75000

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_SPEND_ANALYSIS=true
ENABLE_LEARNING_AGENT=true

# Development
DEBUG=false
TESTING=false
MOCK_EXTERNAL_APIS=false
